<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
        <title>{% block title %}TesisApp{% endblock %}</title>
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <link rel="stylesheet" href="{{ asset('bower_components/bootstrap/dist/css/bootstrap.min.css') }}">
        <link rel="stylesheet" href="{{ asset('bower_components/vis/dist/vis.min.css') }}">
        <link rel="stylesheet" href="{{ asset('bower_components/animate.css/animate.min.css') }}">
        <link rel="stylesheet" type="text/css" href="{{ asset('public/css/base.css') }}">
        {% block stylesheets %}{% endblock %}

        <script src="{{ asset('bower_components/jquery/dist/jquery.min.js') }}"></script>
        <script src="{{ asset('bower_components/underscore/underscore-min.js') }}"></script>
        <script src="{{ asset('bower_components/bootstrap/dist/js/bootstrap.min.js') }}"></script>
        <script src="{{ asset('bower_components/angular/angular.min.js') }}"></script>
        {% block headerJavascripts %}{% endblock %}
    </head>
    <body ng-app="app" class="Site">
        {% include '::partials/header.html.twig' %}

        {% block contenidoMax %}
        <div class="Site-content">
            <div class="container">
                <h1 class="animated fadeInLeft">
                    {% block titulo %}{% endblock %}
                </h1>
            </div>

            <div class="container">
                {% block msjFlas %}
                    {% include '::partials/alert.html.twig' %}
                {% endblock %}
            </div>

            <div>
                {% block contenido %}
                    <div class="row">
                        <div class="col-sm-3 col-md-2">
                            {% block nav %}Barra Lateral{% endblock %}
                        </div>
                        <div class="col-sm-9 col-md-10" style="min-height: 600px">
                            {% block cuerpo %}Cuerpo{% endblock %}
                        </div>
                    </div>
                {% endblock %}
            </div>

        </div>
        {% endblock %}

        {% include '::partials/footer.html.twig' %}

        {% block template %}{% endblock %}

        {% block javascripts %}{% endblock %}
        
    </body>
</html>
