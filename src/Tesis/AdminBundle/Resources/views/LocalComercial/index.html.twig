{% extends "::base.html.twig" %}

{% block titulo %}Local Comercial{% endblock %}

{% block contenido %}
    <div class="container">
        <form action="#" class="form-horizontal" method="POST">
            <div class="form-group">
                <label for="" class="col-sm-3 control-label">Nombre del Local</label>
                <div class="col-sm-5">
                    {{ form_widget(localForm.local, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="form-group">
                <label for="" class="col-sm-3 control-label">Dirección</label>
                <div class="col-sm-5">
                    <div class="input-group">
                        <div class="input-group-addon">
                            <span class="glyphicon glyphicon-home"></span>
                        </div>
                    {{ form_widget(localForm.direccion, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label for="" class="col-sm-3 control-label">Teléfono</label>
                <div class="col-sm-5">
                    <div class="input-group">
                        <div class="input-group-addon">
                            <span class="glyphicon glyphicon-earphone"></span>
                        </div>
                        {{ form_widget(localForm.telefono, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-3 col-sm-5">
                    <input type="submit" class="btn btn-primary" value="Guardar Información">
                </div>
            </div>
            {{ form_widget(localForm.telefono) }}
        </form>

        <legend>Edición de la Carta de Menú</legend>
        <div class="well">
            <legend>Formulario Categoria</legend>
            <form action="{{ path('categoria_save') }}" method="POST">
                {{ form_widget(categoriaForm) }}
                <input type="submit" value="Crear Categoria" class="btn btn-primary">
            </form>
        </div>

        <div class="well">
            <legend>Formulario Producto</legend>
            <form action="{{ path('producto_save') }}" method="POST">
                {{ form_widget(productoForm) }}
                <input type="submit" value="Crear Producto" class="btn btn-primary">
            </form>
        </div>
        {% include 'AdminBundle:LocalComercial:_edicionCarta.html.twig' %}
    </div>

{% endblock %}
