{% extends '::base.html.twig' %}

{% block contenido %}
    <div class="col-xs-12 col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2 col-lg-6 col-lg-offset-3">
        <legend>Inicio de Sesión de Usuario</legend>

        <div class="well">
            <div class="row">
                <div class="col-xs-12 col-sm-4 text-center" style="background-color: #F1F0F0; height: 245px;">
                    <img src="{{ asset('public/img/icons/login.png') }}" alt="">
                </div>
                <div class="col-xs-12 col-sm-8">
                    <form action="{{ path('login_check') }}" method="POST">
                        <div class="form-group">
                            <label for="username">Usuario</label>
                            <input type="text" id="username" name="_username" class="form-control" value="{{ last_username }}">
                        </div>
                        <div class="form-group">
                            <label for="password">Contraseña</label>
                            <input type="password" id="password" name="_password" class="form-control">
                        </div>
                        <div class="form-group">
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" name="remember_me"> Recordarme
                                </label>
                            </div>
                        </div>
                        <div class="text-right">
                            <button type="submit" class="btn btn-primary" style="width: 125px;">
                                <i class="glyphicon glyphicon-log-in"></i>&nbsp;&nbsp; Ingresar
                            </button>
                        </div>
                        <div class="text-right">
                            <small>
                                <a href="#">Olvidé mi contraseña</a>
                            </small>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        
    </div>
{% endblock %}