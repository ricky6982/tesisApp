{% extends "::base.html.twig" %}

{% block titulo %}Ubicación de Servicios{% endblock %}

{% block headerJavascripts %}
    <script src="{{ asset('bower_components/vis/dist/vis.min.js') }}"></script>
    <script src="{{ asset('public/js/ubicacion/app.js') }}"></script>
    <script src="{{ asset('public/js/mapa/saveController.js') }}"></script>
    <script src="{{ asset('public/js/buttonSendDirective.js') }}"></script>
    <script>
        var datos = { 
            urlGetCurrenMap: "{{ path('mapa_current') }}",
            urlSaveMap: "{{ path('mapa_save') }}"
        };
    </script>
{% endblock %}

{% block contenido %}
<div ng-app="app" ng-controller="AppCtrl">
    <div class="text-right" style="margin: 0 20px;" ng-controller="SaveCtrl">
        <btn-send label="Guardar Información" xclass="btn btn-primary" method="POST" url="{{ path('mapa_save') }}" data="data"></btn-send>
    </div>
    <div class="row" style="margin: 10px;">
        <ul class="nav nav-tabs">
            <li class="active"><a href="#servicios" data-toggle="tab" aria-expanded="true">Servicios</a></li>
            <li><a href="#localizacion" data-toggle="tab" aria-expanded="true">Localización de Servicios</a></li>
        </ul>
        <div class="tab-content tab-bordered">
            <div id="servicios" class="tab-pane active">
                {% include 'AdminBundle:Ubicacion:_servicios.html.twig' %}
            </div>
            <div id="localizacion" class="tab-pane">
                {% include 'AdminBundle:Ubicacion:_localizacion.html.twig' %}
            </div>
        </div>
    </div>
</div>
{% endblock %}
